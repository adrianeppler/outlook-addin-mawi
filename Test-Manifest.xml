<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
  xsi:type="MailApp">

  <Id>f97b1f77-1234-4c0b-9b11-epplerfenster-mawi</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Eppler Fensterbau</ProviderName>
  <DefaultLocale>de-DE</DefaultLocale>
  <DisplayName DefaultValue="Mawi-Verarbeitung" />
  <Description DefaultValue="Startet die Verarbeitung einer Mawi-E-Mail oder eines Anhangs." />
  <IconUrl DefaultValue="https://adrianeppler.github.io/mawi-addin/assets/icon-64.png" />
  <HighResolutionIconUrl DefaultValue="https://adrianeppler.github.io/mawi-addin/assets/icon-128.png" />
  <SupportUrl DefaultValue="https://epplerfenster.de" />

  <Hosts>
    <Host Name="Mailbox" />
  </Hosts>

  <Requirements>
    <Sets DefaultMinVersion="1.8">
      <Set Name="Mailbox" />
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://adrianeppler.github.io/mawi-addin/home.html" />
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadWriteItem</Permissions>

  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read" />
  </Rule>

  <DisableEntityHighlighting>false</DisableEntityHighlighting>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.0" xsi:type="VersionOverridesV1_0">
    <Requirements>
      <bt:Sets DefaultMinVersion="1.8">
        <bt:Set Name="Mailbox" />
      </bt:Sets>
    </Requirements>
    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <FunctionFile resid="functionFile" />
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgReadGroup">
                <Label resid="groupLabel" />
                <Control xsi:type="Button" id="runAddInButton">
                  <Label resid="buttonLabel" />
                  <Supertip>
                    <Title resid="buttonLabel" />
                    <Description resid="buttonTooltip" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="icon16" />
                    <bt:Image size="32" resid="icon32" />
                    <bt:Image size="80" resid="icon80" />
                  </Icon>
                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>openDialog</FunctionName>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="icon16" DefaultValue="https://adrianeppler.github.io/mawi-addin/assets/icon-16.png" />
        <bt:Image id="icon32" DefaultValue="https://adrianeppler.github.io/mawi-addin/assets/icon-32.png" />
        <bt:Image id="icon80" DefaultValue="https://adrianeppler.github.io/mawi-addin/assets/icon-80.png" />
      </bt:Images>
      <bt:Urls>
        <bt:Url id="functionFile" DefaultValue="https://adrianeppler.github.io/mawi-addin/functions.html" />
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="groupLabel" DefaultValue="Mawi Tools" />
        <bt:String id="buttonLabel" DefaultValue="Mawi verarbeiten" />
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="buttonTooltip" DefaultValue="Ã–ffnet den Mawi-Verarbeitungsdialog." />
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>

